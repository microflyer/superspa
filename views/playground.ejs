<!DOCTYPE html>
<html>
  <head>
    <title>A playground of AngularJS</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/libraries/bootstrap/dist/css/bootstrap.css' />
    <link rel='stylesheet' href='/libraries/animate.css/animate.min.css' />
    <script src="/libraries/jquery/dist/jquery.js"></script>
    <script src="/libraries/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/libraries/angular/angular.js"></script>
    <script src="/angular_playground/app.js"></script>
  </head>
  <body ng-app="demoApp" >
    <div ng-controller="ParentCtrl" class="bg-info container">

      <h4>Parent Scope</h4>

      <div class="col-xs-4" >
        <input type="text" class="form-control" ng-model="text">
      </div>
      <div class="col-xs-8">
        <button class="btn btn-default" ng-click="sendMessage(text);">SEND</button>
      </div>

      <div class="col-xs-12">
        <h5 ng-repeat="message in messages">
          {{message.source}}: {{message.text}}
        </h5>
      </div>

      <div ng-controller="ChildCtrl" class="bg-warning col-xs-10 col-xs-offset-1">
        <h4>Child Scope</h4>
        <div class="col-xs-4" >
          <input type="text" class="form-control" ng-model="text">
        </div>
        <div class="col-xs-8">
          <button class="btn btn-default" ng-click="sendMessage(text);">SEND</button>
        </div>
        <div class="col-xs-12">
          <h5 ng-repeat="message in messages">
            {{message.source}}: {{message.text}}
          </h5>
        </div>
      </div>
    </div>
  </body>
</html>
